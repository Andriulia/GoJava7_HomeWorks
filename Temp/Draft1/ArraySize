import java.util.Scanner;

public class ArraySize {

    public static int arraySize() {

        Scanner scanner = new Scanner(System.in);

        while (true) {
            try {
                int size;
                String s = scanner.nextLine();
                size = Integer.parseInt(s);

                if (size < 1) {
                    System.out.println("Another input...");
                arraySize();
            }
                    else
                    return size;

            } catch (Exception e) {

                System.out.println("Another input...");
            }

        }
    }
}
